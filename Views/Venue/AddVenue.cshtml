@model EventPlanner.Models.Venue

@{
    ViewData["Title"] = "AddVenue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-center text-capitalize" style="font-family:serif; font-style:italic">Add New Venue</h1>
<hr />

<div class="row container-fluid bg-light align-items-center" style="font-family:serif; font-style:italic">
    <div class="col-md-6">
        <form asp-action="AddVenue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="Venue_id" class="control-label"></label>
                    <input asp-for="Venue_id" class="form-control" />
                    <span asp-validation-for="Venue_id" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Venue_name" class="control-label"></label>
                <input asp-for="Venue_name" class="form-control" />
                <span asp-validation-for="Venue_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue_Address" class="control-label"></label>
                <input asp-for="Venue_Address" class="form-control" />
                <span asp-validation-for="Venue_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue_capacity" class="control-label"></label>
                <input asp-for="Venue_capacity" class="form-control" />
                <span asp-validation-for="Venue_capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue_price" class="control-label"></label>
                <input asp-for="Venue_price" class="form-control" />
                <span asp-validation-for="Venue_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="venue_description" class="control-label"></label>
                <input asp-for="venue_description" class="form-control" />
                <span asp-validation-for="venue_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="ManageVenue">Venue Records</a>
        </div>
    </div>
    <div class="col-md-6">
        <img class="img-fluid" src="~/asset/venuecollection.jpg" alt="Alternate Text" />
        <h5 class="text-capitalize">Add New Venue.</h5>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
