@model IEnumerable<EventPlanner.Models.Venue>

@{
    ViewData["Title"] = "ManageVenue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 style="font-family:serif; font-style:italic">ManageVenue</h1>

<p>
    <a asp-controller="Venue" asp-action="AddVenue">Add New Venue</a>
</p>
<table class="table table-hover table-light table-responsive-md" style="font-family:serif; font-style:italic">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venue_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue_capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.venue_description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Venue_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue_capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venue_description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Venue_id }, new { @Class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Venue_id }, new { @Class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Venue_id }, new { @Class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
