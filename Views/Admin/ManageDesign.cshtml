
@{
    ViewData["Title"] = "Manage Design Page";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="container bg-light font-weight-bolder">

    <h3 class="text-center mb-5 text-dark">Add Design</h3>
    <form action="/" method="post">
        <div class="row mb-3">
            <label for="inputDesignName" class="col-sm-2 col-form-label">Design Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputDesignName" placeholder="Design Name">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPrice" class="col-sm-2 col-form-label">Design Price</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" id="inputPrice" placeholder="Design Price">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputDescription" class="col-sm-2 col-form-label">Design Description</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputDescription" placeholder="Design Description">
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block text-uppercase col-sm-5 mb-2 rounded-pill shadow-sm">Add</button>
    </form>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Menu ID</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>