@model Login

@{
    ViewData["Title"] = "Login Page";
}


<link href="~/css/LoginStyle.css" rel="stylesheet" />

<div class="container-fluid" style="font-family:serif; font-style:italic">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image">
            <img src="https://images.unsplash.com/photo-1602631985686-1bb0e6a8696e?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8YmlydGhkYXklMjBwYXJ0eXxlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" style="width: 900px; height: 550px" alt="Login photo" />
            
        </div>


        <!-- The content half -->   
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- Login content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Planner</h3>
                            
                            <form method="post">
                                <div asp-validation-summary="All" class="form-group mb-3">
                                    <input asp-for="Email"  id="inputEmail" type="email" placeholder="Email address" required="" autofocus="" class="form-control rounded-pill border-0 shadow-sm px-4">
                                    
                                </div>

                                <div class="form-group mb-3">
                                    <input asp-for="Password" id="inputPassword" type="password" placeholder="Password" required="" class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                </div>

                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="RememberMe" id="customCheck1" type="checkbox" checked class="custom-control-input">
                                    <label for="customCheck1" class="custom-control-label">Remember password</label>
                                    @Html.DisplayNameFor(m=> m.RememberMe)
                                </div>
                                <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">Login in</button>
                                <div class="text-center d-flex justify-content-between mt-4">
                                    <p>
                                        Create an Account.<a class="text-dark" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                                            
                                        
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>



